<?xml version="1.0"?>
<app:IndexClass xmlns="http://www.w3.org/1999/xhtml"
                xmlns:js="js.core" xmlns:ui="js.ui" xmlns:app="app" xmlns:conf="js.conf" xmlns:piwik="piwik">

    <js:Router cid="router">
        <conf:Route route="^$" onexec="defaultRoute"/>
    </js:Router>

    <piwik:Tracker piwikUrl="http://piwik.rappidjs.com" baseUrl="http://www.rappidjs.com"/>

    <header id="header" class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="#">
                    &lt;rAppid:js /&gt;
                </a>
                <nav>
                    <ui:SelectionView items="{pages}" tagName="ul" class="nav"
                                      needsSelection="true" selectedItem="{currentPage()}">
                        <js:Template name="item">
                            <li class="active">
                                <a href="/${$item.link}">${$item.label}</a>
                            </li>
                        </js:Template>
                    </ui:SelectionView>
                </nav>
            </div>
        </div>
    </header>

    <js:ModuleLoader router="{router}" cid="moduleLoader">

        <conf:Module name="home" moduleClass="app.module.Home" route="^home.*$"/>
        <conf:Module name="wiki" moduleClass="app.module.Wiki" route="^wiki.*$"/>
        <conf:Module name="documentation" moduleClass="app.module.Documentation" route="^api.*$"/>
        <conf:Module name="license" moduleClass="app.module.License" route="^license$"/>
        <conf:Module name="disclaimer" moduleClass="app.module.Disclaimer" route="^disclaimer$"/>

        <div id="container" class="container">
            <ui:ContentPlaceHolder name="main"/>
        </div>

    </js:ModuleLoader>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="span4">
                    <h3>idea &amp; development</h3>
                    <p>
                        <a href="http://tonyfindeisen.de">Tony Findeisen</a> and <a href="https://github.com/krebbl">Marcus Krejpowicz</a>.
                        <br/>
                        Licensed under the <a href="/license">MIT License</a>.
                    </p>
                </div>
                <div class="span4">
                    <h3>thanks</h3>
                    <p>
                        Developed with the use of <a href="http://requirejs.org/" target="_blank">requirejs</a>
                        , <a href="https://github.com/it-ony/flow.js">flow.js</a>
                        , <a href="http://underscorejs.org/" target="_blank">underscore.js</a>
                        , <a href="https://github.com/it-ony/inherit.js" target="blank">inherit.js</a> and <a href="http://search.npmjs.org/#/ejs" target="blank">ejs</a>. Tested with <a href="http://visionmedia.github.com/mocha/" target="blank">mocha</a> and <a href="http://chaijs.com/" target="blank">chai</a>. Distributed with <a href="http://npmjs.org/" target="blank">npm</a> and <a href="http://nodejs.org" target="blank">node</a>.
                    </p>
                </div>
                <div class="span4">
                    <h3>Imprint</h3>
                    <p>
                        <img src="img/imprint.png"/>
                        <a href="/disclaimer">Disclaimer</a>.
                    </p>
                </div>

            </div>
        </div>

    </footer>

</app:IndexClass>