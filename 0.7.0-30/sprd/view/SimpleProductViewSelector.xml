<ui:SelectionView xmlns:js="js.core" xmlns:ui="js.ui" xmlns:view="sprd.view" xmlns="http://www.w3.org/1999/xhtml"
                  items="{product.productType.views}"
                  needsSelection="true"
                  multiSelect="false"
                  itemKey="view"
                  tagName="ul"
                  product=""
                    viewHeight="50"
                    viewWidth="50"
                    componentClass="product-view-selector">
    <js:Template name="item">
        <li>
            <view:ProductImage view="{view}" product="{product}" appearance="{appearance}" width="{viewWidth}" height="{viewHeight}"/>
        </li>
    </js:Template>
</ui:SelectionView>